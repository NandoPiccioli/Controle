@model Controle.Models.Veiculo

<form method="post" asp-action="Update">
    <input asp-for="IDVeiculo" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Atualizar Marca</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row" text-center>
                    <div class="col-4">
                        <label asp-for="Modelo.Marca.Descricao"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Modelo.Descricao" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Ano" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Cor" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="TipoCombustivel" class="form-control" />
                    </div>
                </div>

                <div class="form-group row" text-center>
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Atualizar" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Voltar</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
@section scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}