@model IEnumerable<Controle.Models.Modelos>

<td class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Modelos</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Modelo" asp-action="Create" class="btn btn-primary">Novo</a>
        </div>
    </div>
    @if (Model != null)
    {
        @if (Model.Count() > 0)
        {
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
    <th>
        Código
    </th>
    <th>
        Descrição
    </th>
    <th>
        Marca
    </th>
    </thead>
    <tbody>
        @foreach (var Modelo in Model)
        {
        <tr>
            <td width="10%">@Modelo.IDModelo</td>
            <td width="35%">@Modelo.Descricao</td>

            <td>
                @Html.DropDownListFor(m => @Modelo.MarcaId,
                                       new SelectList(ViewBag.Marca, "IDMarca", "Descricao"),
                                       new { @class = "form-control", @disabled = "disabled" })
            </td>
            @*<td> @Html.DisplayFor(modelItem => Modelo.Marca.Descricao) </td>*@
            


            <td width="20%">
                <div class="w-100 btn-group" role="group">
                    <a asp-controller="Modelo" asp-action="Update" asp-route-Id="@Modelo.IDModelo" class="btn btn-primary mx-1">Editar</a>
                    <a asp-controller="Modelo" asp-action="Delete" asp-route-Id="@Modelo.IDModelo" class="btn btn-danger mx-1">Deletar</a>
                </div>

            </td>
        </tr>
        }
    </tbody>
</table>

        }
    }

    else
    {

        <p>Não há modelos Cadastrados</p>
    }



</td>
