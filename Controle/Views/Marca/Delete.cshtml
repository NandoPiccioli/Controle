@model Controle.Models.Marca

<form method="post" asp-action="DeletePost">
    <input asp-for="IDMarca" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Deletar Marca</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row" text-center>
                    <div class="col-6">
                        <label asp-for="Descricao"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="Descricao" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row" text-center>
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Deletar" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Voltar</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
