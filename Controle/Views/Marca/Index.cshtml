@model IEnumerable<Controle.Models.Marca>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Marcas</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Marca" asp-action="Create" class="btn btn-primary">Nova</a>
        </div>
    </div>

    @if (Model != null)
    {
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                <th>
                    Código
                </th>
                <th>
                    Descrição
                </th>
                </thead>
                <tbody>
                    @foreach (var marca in Model)
                    {
                        <tr>
                            <td width="10%">@marca.IDMarca</td>
                            <td width="35%">@marca.Descricao</td>
                            <td width="30%">
                                <div class="w-100 btn-group" role="group">
                                    <a asp-controller="Marca" asp-action="Update" asp-route-Id="@marca.IDMarca" class="btn btn-primary mx-1">Editar</a>
                                    <a asp-controller="Marca" asp-action="Delete" asp-route-Id="@marca.IDMarca" class="btn btn-danger mx-1">Deletar</a>
                                </div>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            }
        }
        else
        {

            <p>Não há Marcas cadastradas</p>
    }



    </div>
