@model Controle.Models.Anuncio

<form method="post" asp-action="Update">
    <input asp-for="IDAnuncio" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Atualizar Anuncio</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row" text-center>
                    <div class="col-4">
                        <label asp-for="Descricao"></label>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Descricao" class="form-control" />
                    </div>
                </div>
                <div class="form-group row" text-center>
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Atualizar" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Voltar</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
