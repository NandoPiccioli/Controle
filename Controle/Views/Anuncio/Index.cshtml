@model IEnumerable<Controle.Models.Anuncio>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Listagem de Anúncios</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Anuncio" asp-action="Create" class="btn btn-primary">Novo Anúncio</a>
        </div>
    </div>

    @if (Model != null)
    {
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                <th>
                    Código
                </th>
                <th>
                    Descrição
                </th>
                </thead>
                <tbody>
                  
                </tbody>
            </table>

            }
        }
        else
        {

            <p>Não há Anúncios cadastrados</p>
    }



    </div>
